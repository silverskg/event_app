<%= bootstrap_devise_error_messages! %>
<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1><%= t('ユーザー登録') %></h1>
      <div class="box-name">
        <%= f.label :name ,'ニックネーム'%>
        <%= f.text_field  :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
      </div>
      <!-- /.box-name -->
      <div class="box-email">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
      <!-- /.box-email -->
      <div class="box-password">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'current-password',placeholder: "最低6文字必要です", class: 'form-control' %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>
      <!-- /.box-password -->
      <div class="box-password_confirmation">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
      </div>
      <!-- /.box-password_confirmation -->
      <div class="box-login">
        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>
      <!-- /.box-login -->
      
      <div class="box-newusr">
        <p><span>------------</span> すでにアカウントをお持ちですか? <span>------------</span></p>
        <%= link_to "サインイン", new_user_session_path %>
      </div>
    <% end %>
  </div>
  <!-- /.box-inner -->
</div>
<!-- /.box -->
