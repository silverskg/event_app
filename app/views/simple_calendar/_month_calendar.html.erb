<div class="simple-calendar">
  <div class="calendar-heading">
    <div class="btn-prev">
      <%= link_to t('simple_calendar.previous', default: '<先月'), calendar.url_for_previous_view, class: "btn btn-primary" %>
    </div>
    <!-- /.btn-prev -->
    <div class="calendar-title">
      <span><%= start_date.year%>年 <%= t('date.month_names')[start_date.month] %></span>
    </div>
    <!-- /.calendar-title -->
    <div class="btn-next">
      <%= link_to t('simple_calendar.next', default: '来月>'), calendar.url_for_next_view, class: "btn btn-primary" %>
    </div>
    <!-- /.btn-next -->
  </div>

  <table class="table table-striped">
    <thead class="weekday" >
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
