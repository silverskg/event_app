<div class="container">
  <div>
    <div class="user_card" style="width:100%;">
      <div class="card-body">
        <div class="row">
          <% if user.image_url == "" %>
            <%= image_tag "roof_log.png", width: 70, height: 60, class: "image_icons" %>
          <% else %>
            <%= image_tag user.image_url, width: 70, height: 60, class: "image_icons" %>
          <% end %>
          <h5 class="card-name">
            <%= user.name%>
          </h5>
        </div>
        <!-- /.row -->
        <%= link_to(user, class: "link") do %>
          <div class="row justify-content-start">
            <p>今月のアルバイト数：</p>
            <p>０</p>
          </div>
          <!-- /.row justify-content-start -->
          <div class="row justify-content-start">
            <p>現在のアルバイト日当単価：</p>
            <p>00000円</p>
          </div>
          <!-- /.row justify-content-start -->
          <% end %>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>
<!-- /.container -->
