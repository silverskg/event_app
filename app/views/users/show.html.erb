<div class="container">
  <div class="row">
    <div class="col col-sm-3">
      <% if @user.image_url == "" %>
        <%= image_tag "roof_log.png" , size: "120x100", class: "image_icons" %>
      <% else %>
        <%= image_tag @user.image_url, size: "120x100", class: "image_icons" %>
      <% end %>
      <% if current_user.id == @user.id %>
          <ul class="btn-group ">
            <a href="#" id="navbarDropdown" data-toggle="dropdown">
            <div class="btn btn-outline-dark btn-lg  user-icon">変更</div>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item"><%= link_to 'マイページ編集', edit_user_registration_path %></a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item"><%= link_to "収益グラフ表示", "#" %></a>
            </div>
          </ul>
          <% end %>
    </div>
    <div class="col-12 col-sm-9 col-lg-9">
      <div class="profile">
        <div class="row justify-content-start">
          <h5><%= @user.name %></h5>
        </div>
        <div class="row justify-content-between">
          <div class="text-info">
          <div>
            <%=link_to "今月参加した日数",  "#" %>
            <%= @user.tickets.count %>
          </div>
          <div class="center-line"></div>
          <!-- /.center-line -->
          <div>
            <%=link_to "今月の予想金額", "#" %>
            <%=  "〇〇円"%>
          </div>
          <div class="center-line"></div>
          <!-- /.center-line -->
          <div>
            <%=link_to "今までの収益", "#" %>
            <%= "〇〇円" %>
          </div>
          <div class="center-line"></div>
          <!-- /.center-line -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "#{@user.name}にメッセージを送る", "#", class: 'btn btn-outline-dark btn-lg rounded-pill' %>
  </div>
  <div class="text-center">
    <p>参加したアルバイト<i class="fas fa-hand-holding-usd" style="vertical-align:text-top;"></i></p>
  </div>
  <div class="container">
    <div class="list-group" >
      <% @user.ticket_events.each do |event| %>
        <%= link_to(event, class: "event_card") do %>
          <h5 class="list-item-group-heading" >
            <%= event.name %>
          </h5>
          <p class="md-1">
            <%= event.content%>
          </p>
          <p class="md-1">参加中　or 終了
            <%= l event.start_time, format: :day %>
          </p>
          <% end %>
      <% end %>
    </div>  
    <!-- /.list-group -->
  </div>
</div><%# container %>
