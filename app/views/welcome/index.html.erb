<h1>アルバイト一覧</h1>
<ul class="list-group">
  <%= month_calendar events: @events do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
    <div>
      <%= link_to event.name.truncate(5), event %>
    </div>
    <% end %>
  <% end %>
  <%= link_to '予定を書く', new_event_path, class: "btn btn-secondary btn-lg" %>
</ul>
<!-- /.list-group -->


<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>